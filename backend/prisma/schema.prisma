generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Interview {
  id        String   @id @default(uuid())
  userId    String
  role      String
  question  String
  answer    String
  score     Int
  feedback  String
  createdAt DateTime @default(now())
}

model Subscription {
  id        String   @id @default(uuid())
  userId    String   @unique
  plan      String
  platform  String
  expiresAt DateTime
}

model Usage {
  id              String   @id @default(uuid())
  userId          String
  date            DateTime
  interviewsCount Int      @default(0)

  @@unique([userId, date])
}

model ApiUsage {
  id        String   @id @default(uuid())
  userId    String
  tokens    Int
  createdAt DateTime @default(now())
}
